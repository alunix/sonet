<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/statuses_per_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:text="@string/statuses_per_account" />

    <Button
        android:id="@+id/settings_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statuses_per_account"
        android:text="@string/settings_notification" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="@dimen/message_item_header_height"
        android:layout_height="@dimen/message_item_header_height"
        android:layout_below="@id/settings_notification"
        android:padding="@dimen/material_padding"
        tools:src="@drawable/icon" />

    <TextView
        android:id="@+id/created"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/message_item_header_height"
        android:layout_alignParentRight="true"
        android:layout_below="@id/settings_notification"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="@dimen/material_padding"
        android:text="@string/settings_time" />

    <TextView
        android:id="@+id/friend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_item_header_height"
        android:layout_below="@id/settings_notification"
        android:layout_toLeftOf="@+id/created"
        android:layout_toRightOf="@+id/profile"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingBottom="@dimen/material_padding"
        android:paddingTop="@dimen/material_padding"
        android:text="@string/settings_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ad"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/friend"
        android:padding="@dimen/material_padding"
        android:text="@string/settings_message_extended" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_above="@+id/ad"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:paddingBottom="@dimen/material_padding"
        android:paddingRight="@dimen/material_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/icon" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>
