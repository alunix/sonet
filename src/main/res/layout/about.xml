<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/content_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.google.samples.apps.iosched.ui.widget.ScrimInsetsFrameLayout
        android:id="@+id/drawer_container"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/background_material_light"
        android:fitsSystemWindows="true"
        app:insetForeground="#4000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/drawer_account_background"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignBottom="@+id/drawer_accounts"
                    android:layout_alignTop="@+id/drawer_accounts"
                    android:minHeight="@dimen/nav_drawer_accounts_min_height"
                    android:scaleType="centerCrop" />

                <GridView
                    android:id="@+id/drawer_accounts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:columnWidth="@dimen/message_item_header_height"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:paddingBottom="@dimen/nav_drawer_accounts_padding"
                    android:paddingLeft="@dimen/material_padding"
                    android:paddingRight="@dimen/material_padding"
                    android:paddingTop="@dimen/nav_drawer_accounts_padding"
                    android:stretchMode="columnWidth"
                    tools:listitem="@layout/account_profile" />

                <ImageView
                    android:id="@+id/empty_accounts"
                    android:layout_width="@dimen/message_item_header_height"
                    android:layout_height="@dimen/message_item_header_height"
                    android:paddingBottom="@dimen/nav_drawer_accounts_padding"
                    android:paddingLeft="@dimen/material_padding"
                    android:paddingRight="@dimen/material_padding"
                    android:paddingTop="@dimen/nav_drawer_accounts_padding"
                    android:src="@drawable/ic_person_add_grey600_48dp"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hint_foreground_material_light" />

            <ListView
                android:id="@+id/drawer_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                tools:listitem="@android:layout/simple_list_item_1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hint_foreground_material_light" />

            <ListView
                android:id="@+id/drawer_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                tools:listitem="@android:layout/simple_list_item_1" />
        </LinearLayout>
    </com.google.samples.apps.iosched.ui.widget.ScrimInsetsFrameLayout>
</android.support.v4.widget.DrawerLayout>