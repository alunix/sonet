<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/friend_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_item_header_height"
        android:layout_alignBottom="@+id/friend"
        android:layout_alignTop="@+id/friend"
        android:scaleType="fitXY"
        tools:background="#FF000000" />

    <TextView
        android:id="@+id/friend"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/message_item_header_height"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="@dimen/message_item_padding"
        android:textColor="@color/default_friend_color"
        android:textStyle="bold"
        tools:text="Hello, my name is" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/message_item_header_height"
        android:layout_height="@dimen/message_item_header_height"
        android:paddingBottom="@dimen/message_item_padding"
        android:paddingLeft="@dimen/message_item_padding"
        android:paddingRight="40dip"
        android:paddingTop="40dip"
        android:scaleType="fitCenter"
        tools:src="@drawable/googleplus" />

    <TextView
        android:id="@+id/created"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/message_item_header_height"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="@dimen/message_item_padding"
        android:textColor="@color/default_friend_color"
        tools:text="Today" />

    <ImageView
        android:id="@+id/status_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/friend"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/friend"
        android:orientation="vertical"
        android:padding="@dimen/message_item_padding">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_message_color"
            tools:text="Message goes here" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/message_item_padding"
            android:paddingRight="@dimen/message_item_padding"
            android:scaleType="fitCenter"
            tools:src="@drawable/icon" />

    </LinearLayout>
</RelativeLayout>