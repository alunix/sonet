<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/content_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_container"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:theme="@style/NavigationDrawer">

        <GridView
            android:id="@+id/drawer_accounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="56dp"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:padding="4dip"
            android:stretchMode="columnWidth"
            tools:listitem="@layout/account_profile" />

        <ImageView
            android:id="@+id/empty_accounts"
            android:layout_width="@dimen/message_item_header_height"
            android:layout_height="@dimen/message_item_header_height"
            android:padding="4dip"
            android:src="@drawable/ic_person_add_grey600_48dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint_foreground_material_light" />

        <ListView
            android:id="@+id/drawer_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            tools:listitem="@android:layout/simple_list_item_1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint_foreground_material_light" />

        <ListView
            android:id="@+id/drawer_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            tools:listitem="@android:layout/simple_list_item_1" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>